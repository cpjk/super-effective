<!DOCTYPE html>
<html>
<head>
  <title>Supereffective</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="nav">
    <%= link_to("Team", :add_pokemon) %>
  </div>
<% if flash[:error] %>
  <%= content_tag :div, class: 'header-bar centre-block' do %>
    <%= flash[:error] %>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
